{% extends 'base.html.twig' %}

{% block title %}Magazine{% endblock %}

{% block body %}
    <h1>Magazine</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ magazine.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ magazine.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ magazine.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ magazine.price }}</td>
            </tr>
            <tr>
                <th>PriceWithTax</th>
                <td>{{ magazine.priceWithTax }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ magazine.createdAt ? magazine.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ magazine.updatedAt ? magazine.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IssueNumber</th>
                <td>{{ magazine.issueNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('magazine_index') }}">back to list</a>

    <a href="{{ path('magazine_edit', {'id': magazine.id}) }}">edit</a>

    {{ include('magazine/_delete_form.html.twig') }}
{% endblock %}
